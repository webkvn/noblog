<%- include header %>
<% posts.forEach(function (post, index) { %>
<p>
  <h2>
    <a href="/p/<%= post._id %>"><%= post.title %></a>
    <a href="/u/<%= post.name %>"><img src="<%= post.head %>" class="r_head" /></a>
  </h2>
</p>
<p class="info">
  作者：<a href="/u/<%= post.name %>">
    <%= post.name %></a> |
  日期：
  <%= post.time.minute %> |
  标签：
  <% if (post.tags) { %>
  <% post.tags.forEach(function (tag, index) { %>
  <% if (tag) { %>
  <a class="tag" href="/tags/<%= tag %>">
    <%= tag %></a>
  <% } %>
  <% }) %>
  <% } %>
  <% if (post.reprint_info && post.reprint_info.reprint_from) { %>
  <br><a href="/u/<%= post.reprint_info.reprint_from.name %>/<%= post.reprint_info.reprint_from.day %>/<%= post.reprint_info.reprint_from.title %>">原文链接</a>
  <% } %>
</p>
<p class="info">
  阅读：
  <%= post.pv %> |
  评论：
  <%= post.comments.length %> 
</p>
<% }) %>
<%- include paging %>
<%- include footer %>
